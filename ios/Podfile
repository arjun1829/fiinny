# ios/Podfile
platform :ios, '16.0'
$ios_deployment_target = '16.0'

ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcconfig = File.expand_path('../Flutter/Generated.xcconfig', __FILE__)
  raise "#{generated_xcconfig} missing â€” run flutter pub get" unless File.exist?(generated_xcconfig)
  File.foreach(generated_xcconfig) { |line| return line.split('=').last.strip if line.start_with?('FLUTTER_ROOT') }
  raise "FLUTTER_ROOT not found in Generated.xcconfig"
end

require File.expand_path('packages/flutter_tools/bin/podhelper', flutter_root)

target 'Runner' do
  use_frameworks!
  use_modular_headers!
  flutter_install_all_ios_pods(File.dirname(File.realpath(__FILE__)))
end

post_install do |installer|
  # project-wide
  installer.generated_projects.each do |project|
    project.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = $ios_deployment_target
      config.build_settings['SWIFT_VERSION'] = '5.9'
    end
  end

  # every pod target
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = $ios_deployment_target
      config.build_settings['SWIFT_VERSION'] = '5.9'
    end
  end

  # flutter extras
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
  end
end
