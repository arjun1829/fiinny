{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "rootDir": "./src",
    "outDir": "./lib",

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "resolveJsonModule": true,
    "sourceMap": true,
    "incremental": true,
    "noEmitOnError": true,
    "moduleDetection": "force",
    "types": ["node"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["lib", "node_modules"]
}
